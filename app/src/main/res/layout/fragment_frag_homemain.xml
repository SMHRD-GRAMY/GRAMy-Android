<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <Button
        android:id="@+id/btnGoBoard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow"
        android:fontFamily="@font/secular_one"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/btnGoBoard"
        android:textSize="28sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoMgShelf"
        app:layout_constraintEnd_toEndOf="@+id/btnGoReport"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnGoReport"
        app:layout_constraintTop_toBottomOf="@+id/btnGoReport" />

    <Button
        android:id="@+id/btnGoReport"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow"
        android:fontFamily="@font/secular_one"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/btnGoReport"
        android:textSize="28sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoBoard"
        app:layout_constraintEnd_toEndOf="@+id/btnGoPdCheck"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnGoPdCheck"
        app:layout_constraintTop_toBottomOf="@+id/btnGoPdCheck" />

    <Button
        android:id="@+id/btnGoPdCheck"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/shadow"
        android:fontFamily="@font/secular_one"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/btnGoPdCheck"
        android:textAlignment="center"
        android:textSize="28sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoReport"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnGoMgShelf"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/shadow"
        android:fontFamily="@font/secular_one"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/btnGoMgShelf"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnGoBoard"
        app:layout_constraintTop_toBottomOf="@+id/btnGoBoard" />

</androidx.constraintlayout.widget.ConstraintLayout>